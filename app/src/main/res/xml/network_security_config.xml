<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- For Android Emulator -->
        <domain includeSubdomains="true">192.168.100.121</domain> <!-- Example: Replace with your local network IP -->
    </domain-config>
    <base-config cleartextTrafficPermitted="false">
        <!-- Default to not permitting cleartext; override as necessary per domain -->
    </base-config>
</network-security-config>
